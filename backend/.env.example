# 应用配置
APP_NAME=TikTok Risk Detector
APP_VERSION=1.0.0
DEBUG=True
HOST=0.0.0.0
PORT=8000

# 数据库配置
DATABASE_URL=postgresql+asyncpg://postgres:password123@postgres:5432/tiktok_detector

# Redis配置
REDIS_URL=redis://redis:6379/0

# CORS配置 (多个域名用逗号分隔)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080

# 安全配置
SECRET_KEY=your-secret-key-please-change-in-production

# 限流配置
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_PERIOD=60

# 第三方API密钥 (可选，不配置将使用免费API)
IPHUB_API_KEY=
IPQUALITYSCORE_API_KEY=
IP2LOCATION_API_KEY=
MAXMIND_LICENSE_KEY=

# API速率限制配置
# IPHub API配额管理（每天1000次免费调用，使用990次留10次余量）
IPHUB_DAILY_LIMIT=1000
IPHUB_DAILY_USAGE=990

# IPQualityScore API配额管理（每月5000次免费调用，分配每天150次）
IPQUALITYSCORE_MONTHLY_LIMIT=5000
IPQUALITYSCORE_DAILY_USAGE=150

# Proxycheck.io API配额（免费API，每天1000次）
PROXYCHECK_DAILY_LIMIT=1000
PROXYCHECK_DAILY_USAGE=999

# Celery配置
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# 日志级别
LOG_LEVEL=INFO

# 风险评分权重
RISK_WEIGHT_IP=0.30
RISK_WEIGHT_PRIVACY=0.25
RISK_WEIGHT_FINGERPRINT=0.20
RISK_WEIGHT_DEVICE=0.15
RISK_WEIGHT_NETWORK=0.10